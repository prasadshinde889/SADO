name: Build APK

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Install Node
        uses: actions/setup-node@v3
        with:
          node-version: 18
      - name: Install Bubblewrap
        run: npm install -g @bubblewrap/cli
      - name: Build APK
        env:
          PWA_URL: ${{ secrets.PWA_URL }}
        run: |
          bubblewrap init --manifest=${{ secrets.PWA_URL }}/manifest.json --directory=build
          cd build
          bubblewrap build
          mkdir -p ../output
          mv *.apk ../output/
      - name: Upload APK
        uses: actions/upload-artifact@v3
        with:
          name: sado-apk
          path: output/*.apk
